{% extends "layout.njk" %}

{% block head %}
<title>{{item.title}}</title>
{% endblock %}
{% block content %}

<div id="wrapper">
    <h1>{{item.title}}</h1>
</div>

<section class="video">
    <div class="card"  id="{{item.id}}">
            <div class="cardvideo">
               <iframe src="https://www.youtube.com/embed/{{item.id}}" frameborder="0"></iframe>
            </div>

            <div class="cardc">
                <p>{{item.title}}</p>
            </div>

            <div class="cardinf">
             <p>{{item.duration}}</p>
             <p class="cardprice">{{item.price}}</p>
            </div>
        </div>

</section>                                                       
{% endblock %}

